<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@style/MainButton</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/actionbar_title_text</item>
    </style>

    <style name="Border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey400</item>
    </style>

    <style name="HintText">
        <item name="android:layout_marginBottom">@dimen/hint_margin</item>
    </style>

    <style name="EditText">
        <item name="android:paddingTop">@dimen/hint_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextSingleLine" parent="EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="InputContainer">
        <item name="android:layout_margin">@dimen/input_margin</item>
    </style>

    <style name="SessionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/input_margin</item>
        <item name="android:layout_marginRight">@dimen/input_margin</item>
        <item name="android:layout_marginTop">@dimen/session_margin</item>
        <item name="android:layout_marginBottom">@dimen/session_margin</item>
    </style>

    <style name="MainButtonThemeOverlay">
        <item name="colorPrimary">@color/mainButton</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/greenButton</item>
    </style>

    <!-- Button -->
    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="materialThemeOverlay">@style/MainButtonThemeOverlay</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

</resources>
